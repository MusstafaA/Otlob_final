
<p id="notice"><%= notice %></p>

<h1>Friends</h1>

<!-- <%= link_to 'New Friendship', new_friendship_path %>-->

<%= render 'form' %>


<fieldset class="scroll col-sm-12">
  <legend>Friends List:</legend>
  <% @friendships.each do |friendship| %>
    <div class="col-sm-4">
      <img class="col-sm-5" src="<%= friendship.friend.avatar %>">
      <div class="col-sm-6">
        <span class="col-sm-12"><%= friendship.friend.name %></span>
        <span class="col-sm-12"><%= link_to 'Unfriend', friendship, method: :delete, data: { confirm: 'Are you sure?' }, :class=> 'btn btn-danger' %></span>
      </div>
    </div>
  <% end %>
</fieldset>
    

